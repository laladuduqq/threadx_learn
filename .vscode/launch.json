{
    "version": "0.2.0",
    "configurations": [
        //dap-link
        {
            "name": "DAPlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/Debug/base.elf", 
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F407IG",
            "svdFile": "${workspaceFolder}/STM32F407.svd",
            "servertype": "openocd", 
            "configFiles": [
                "daplink.cfg", 
            ],
            "runToEntryPoint": "main", 
            "preLaunchTask": "build(debug)",
            "rtos": "ThreadX",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "showDevDebugOutput": "raw",
        },
        //jlink
        {
            "name": "Jlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/build/Debug/base.elf",
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F407IG",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "jlink",
            "interface": "swd",
            "svdFile": "STM32F407.svd",
            "preLaunchTask": "build(debug)",
            "rtos": "Azure",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            }
        },
        // st-link
        {
            "name": "st-link",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/Debug/base.elf", 
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F407IG",
            "svdFile": "STM32F407.svd",
            "servertype": "openocd",
            "configFiles": [
                "st-link.cfg", 
            ],
            "runToEntryPoint": "main", 
            "preLaunchTask": "build(debug)",
            "rtos": "ThreadX",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "showDevDebugOutput": "raw",
        },
    ],
}